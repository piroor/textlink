{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "2.0.0a",
  "author": "YUKI \"Piro\" Hiroshi",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "contextMenus",
    "find",
    "storage"
  ],
  "icons": {
    "32": "resources/icon.png"
  },
  "background": {
    "scripts": [
      "common/Configs.js",
      "common/constants.js",
      "common/common.js",
      "background/uriMatcher.js",
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_end",
      "js": [
        "common/Configs.js",
        "common/constants.js",
        "common/common.js",
        "common/xpath.js",
        "content_scripts/range.js",
        "content_scripts/content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "textlink@piro.sakura.ne.jp",
      "strict_min_version": "57.0a1"
    }
  }
}
